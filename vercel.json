{
  "version": 2,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "X-Robots-Tag", "value": "index, follow" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/((?!robots\\.txt|sitemap\\.xml).*)", "destination": "/" }
  ]
}
