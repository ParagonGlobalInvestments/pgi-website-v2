# Environment Variables for PGI Application
# Copy this file to .env.local and fill in your values

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Portal Configuration
NEXT_PUBLIC_PORTAL_ENABLED=true

# Portal Subdomain URL (optional â€” only set when using portal.* subdomain)
# When set, middleware auto-redirects portal routes (/login, /portal/*) to this subdomain.
# NEXT_PUBLIC_PORTAL_URL=https://portal.paragoninvestments.org

# PostHog Analytics (Optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Feature Flags (Optional - defaults shown)
NEXT_PUBLIC_SHOW_STATS=false
NEXT_PUBLIC_ENABLE_INTERNSHIPS=false
NEXT_PUBLIC_ENABLE_DIRECTORY=false
NEXT_PUBLIC_ENABLE_ADMIN_FEATURES=true


# ADMIN_EMAILS=email1@example.com,email2@example.com
# NODE_ENV is automatically set by Next.js - do not set manually
