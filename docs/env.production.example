# Production Environment Variables for PGI Application
# Configure these in your Vercel project settings (or production environment)

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application URL
NEXT_PUBLIC_APP_URL=https://paragoninvestments.org

# Portal Configuration
NEXT_PUBLIC_PORTAL_ENABLED=true   # or false to hide portal and login
NEXT_PUBLIC_PORTAL_URL=https://portal.paragoninvestments.org
NEXT_PUBLIC_SITE_URL=https://paragoninvestments.org

# NextAuth Configuration (Required for /resources page)
NEXTAUTH_SECRET=your-production-secret-key
NEXTAUTH_URL=https://paragoninvestments.org
NEXTAUTH_BASE_PATH=/api/nextauth
PGI_REQUIRE_EDU=true

# Google Cloud Console (Required for /resources page)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# PostHog Analytics (Optional)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Feature Flags - Enable features in production as needed
NEXT_PUBLIC_SHOW_STATS=false
NEXT_PUBLIC_ENABLE_INTERNSHIPS=false
NEXT_PUBLIC_ENABLE_DIRECTORY=false
NEXT_PUBLIC_ENABLE_ADMIN_FEATURES=true


# ADMIN_EMAILS=email1@example.com,email2@example.com
# NODE_ENV is automatically set by Next.js - do not set manually
